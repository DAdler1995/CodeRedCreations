@model List<CodeRedCreations.Models.ApplicationUser>
@inject Microsoft.AspNetCore.Identity.UserManager<CodeRedCreations.Models.ApplicationUser> _userManager;
@{
    ViewData["Title"] = "Admin control panel";
}
<h2>@ViewData["Title"]</h2>
<p class="text-success">@ViewData["SuccessMessage"]</p>
<div class="col-md-6">
    <h4>Tools</h4>
    <hr />
    <ul class="list-unstyled">
        <li>
            <a asp-area="" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Admin" asp-action="ManageProducts">Manage Products & Brands</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Admin" asp-action="ManageCars">Manage Cars</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Admin" asp-action="ManagePromos">Manage Promos</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Admin" asp-action="ManagePayouts">Manage Payouts</a>
        </li>
    </ul>
</div>
<div class="col-md-6">
    <h4>User List</h4>
    <hr />
    <p>Total Users: @Model.Count()</p>
    <ol style="height: 200px; overflow-y: auto;">
        @foreach (var item in Model)
        {
        <li class="text-capitalize">
            @if (_userManager.GetRolesAsync(await _userManager.FindByEmailAsync(item.Email)).Result.Contains("Admin"))
            {
                <span class="text-red">@item.UserName</span>
            }
            else
            {
                @item.UserName
            }
        </li>
        }
    </ol>
</div>